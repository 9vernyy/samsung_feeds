        android:textSize="26sp" />

    <TextView
        android:id="@+id/countSubs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="10"
        android:textSize="26sp" />


</RelativeLayout>
